<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mediconnect.BookReservationController"
            prefWidth="700" prefHeight="650" stylesheets="@style.css"
            style="-fx-background-color: #f7fafc;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" BorderPane.alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-padding: 20px 30px;">
            <children>
                <Button text="â† Back" onAction="#handleBack"
                        style="-fx-background-color: rgba(255,255,255,0.25); -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 10px 20px; -fx-font-size: 13px; -fx-cursor: hand;"/>
                <Label text="Book Reservation" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: transparent;">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <!-- Doctor Info -->
                    <VBox spacing="10" styleClass="card" prefWidth="600">
                        <padding>
                            <Insets top="20" right="25" bottom="20" left="25"/>
                        </padding>
                        <Label text="Doctor Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                        <Label fx:id="doctorNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Label fx:id="doctorSectorLabel" style="-fx-font-size: 14px; -fx-text-fill: #718096;"/>
                        <Label fx:id="doctorFeesLabel" style="-fx-font-size: 14px; -fx-text-fill: #2d3748;"/>
                    </VBox>

                    <!-- Available Time Slots -->
                    <VBox spacing="15" styleClass="card" prefWidth="600">
                        <padding>
                            <Insets top="20" right="25" bottom="20" left="25"/>
                        </padding>
                        <Label text="Select Time Slot" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                        <VBox fx:id="timeSlotsContainer" spacing="10"/>
                    </VBox>

                    <!-- Patient Information Form -->
                    <VBox fx:id="patientInfoForm" spacing="15" styleClass="card" prefWidth="600" visible="false">
                        <padding>
                            <Insets top="20" right="25" bottom="20" left="25"/>
                        </padding>
                        <Label text="Your Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>

                        <VBox spacing="8">
                            <Label text="Full Name: *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="nameField" promptText="Enter your full name"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Age: *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="ageField" promptText="Enter your age"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Gender: *" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="genderComboBox" promptText="Select gender" prefWidth="200"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Phone Number: *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="phoneField" promptText="Enter your phone number"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Email: (Optional)" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="emailField" promptText="Enter your email"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Past Medical Complexities: (Optional)" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="complexitiesArea" promptText="Describe any past medical issues or complexities"
                                     prefRowCount="4" wrapText="true"/>
                        </VBox>

                        <Label fx:id="selectedSlotLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #667eea; -fx-padding: 10 0 0 0;"/>

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                            <Button text="Confirm Booking" onAction="#handleConfirmBooking" styleClass="primary"
                                    style="-fx-padding: 14px 40px; -fx-font-size: 15px;"/>
                            <Button text="Cancel" onAction="#handleCancelBooking"
                                    style="-fx-padding: 14px 40px; -fx-font-size: 15px; -fx-background-color: #e2e8f0; -fx-text-fill: #2d3748;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>

