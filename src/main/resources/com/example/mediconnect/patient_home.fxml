<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.mediconnect.PatientHomeController"
            prefWidth="1100" prefHeight="600" stylesheets="@style.css"
            style="-fx-background-color: #f7fafc;">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding:16 20;">
            <children>
                <Button text="←" onAction="#goBackToLanding" styleClass="back-circle"/>
                <Label text="AidAccess • Find a doctor" style="-fx-font-size:20px; -fx-font-weight:800; -fx-text-fill:#4a5568;"/>
                <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="28" alignment="TOP_CENTER" styleClass="card" maxWidth="900">
            <padding><Insets top="30" left="40" right="40" bottom="30"/></padding>
            <children>
                <Label text="Find the Right Doctor" style="-fx-font-size:26px; -fx-font-weight:700; -fx-text-fill:#667eea;"/>
                <HBox spacing="18" alignment="CENTER">
                    <children>
                        <VBox spacing="6">
                            <children>
                                <Label text="Specialty / Sector" styleClass="field-label"/>
                                <ComboBox fx:id="sectorField" promptText="e.g. Cardiologist" prefWidth="200" styleClass="combo-box"/>
                            </children>
                        </VBox>
                        <VBox spacing="6">
                            <children>
                                <Label text="Location / Division" styleClass="field-label"/>
                                <ComboBox fx:id="locationField" promptText="e.g. Dhaka" prefWidth="200" styleClass="combo-box"/>
                            </children>
                        </VBox>
                        <VBox spacing="6">
                            <children>
                                <Label text="Online Consultation" styleClass="field-label"/>
                                <ComboBox fx:id="onlineField" promptText="Any" prefWidth="160" styleClass="combo-box"/>
                            </children>
                        </VBox>
                        <VBox spacing="6" alignment="CENTER">
                            <children>
                                <Label text="" />
                                <Button text="Search" onAction="#handleSearch" styleClass="primary" prefWidth="140"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <Button text="View All Doctors" onAction="#handleViewAll" style="-fx-background-color:#edf2f7; -fx-text-fill:#2d3748; -fx-font-weight:600; -fx-background-radius:22; -fx-padding:10 20;"/>
                        <Label fx:id="resultCountLabel" style="-fx-text-fill:#4a5568; -fx-font-size:13px;"/>
                    </children>
                </HBox>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background:transparent; -fx-background-color:transparent;">
                    <content>
                        <VBox fx:id="doctorCardsContainer" spacing="12" style="-fx-padding:8;"/>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding:12;">
            <children>
                <Label text="© 2025 AidAccess • MediConnect" style="-fx-text-fill:#a0aec0; -fx-font-size:11px;"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
