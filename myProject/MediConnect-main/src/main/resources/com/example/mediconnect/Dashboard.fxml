<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.mediconnect.DoctorDashboard"
      prefWidth="650" prefHeight="600" stylesheets="@style.css"
      style="-fx-background-color: #f7fafc;">

    <top>
        <!-- Header with logout button -->
        <HBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-padding: 20px 30px;">
            <children>
                <Label text="Doctor Dashboard" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: rgba(255,255,255,0.25); -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 12px 28px; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: rgba(255,255,255,0.4); -fx-border-width: 1.5px; -fx-border-radius: 20px;"/>
            </children>
        </HBox>
    </top>

    <center>
        <!-- Scrollable content with doctor information -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" style="-fx-background-color: transparent;">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>
                    <VBox spacing="18" styleClass="card" prefWidth="550">
                        <children>
                            <Label text="Your Profile Information" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>

                            <GridPane hgap="15" vgap="15" style="-fx-padding: 10 0 0 0;">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" minWidth="180" prefWidth="180"/>
                                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Sector:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="sectorLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Qualifications:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="qualificationsLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Experience (years):" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="experienceLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Age:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="ageLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="phoneLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="emailLabel" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Chamber:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="chamberLabel" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Location:" GridPane.rowIndex="8" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="locationLabel" GridPane.rowIndex="8" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Schedule:" GridPane.rowIndex="9" GridPane.columnIndex="0" styleClass="info-label" GridPane.valignment="TOP"/>
                                <VBox fx:id="scheduleContainer" GridPane.rowIndex="9" GridPane.columnIndex="1" spacing="4"/>

                                <Label text="Gender:" GridPane.rowIndex="10" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="genderLabel" GridPane.rowIndex="10" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Fees:" GridPane.rowIndex="11" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="feesLabel" GridPane.rowIndex="11" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Hospital Affiliations:" GridPane.rowIndex="12" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="hospitalAffiliationsLabel" GridPane.rowIndex="12" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Online Consultation:" GridPane.rowIndex="13" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="onlineConsultationLabel" GridPane.rowIndex="13" GridPane.columnIndex="1" styleClass="info-value"/>

                                <Label text="Consultation Duration:" GridPane.rowIndex="14" GridPane.columnIndex="0" styleClass="info-label"/>
                                <Label fx:id="consultationDurationLabel" GridPane.rowIndex="14" GridPane.columnIndex="1" styleClass="info-value"/>
                            </GridPane>

                            <HBox alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                                <children>
                                    <Button text="Update Profile" fx:id="updateButton" onAction="#handleUpdateInfo" styleClass="primary"
                                            style="-fx-padding: 14px 40px; -fx-font-size: 15px;"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Time Slots Section -->
                    <VBox fx:id="timeSlotContainer" spacing="10" styleClass="card" prefWidth="550" style="-fx-margin-top: 20px;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
